{
    "name": "article-manager",
    "version": "0.1.0",
    "description": "Local Electron + Vue tool for managing blog articles and pushing updates to GitHub Pages.",
    "main": "dist-electron/main/index.js",
    "author": "",
    "private": true,
    "scripts": {
        "dev": "electron-vite dev",
        "build": "electron-vite build",
        "preview": "electron-vite preview",
        "lint": "eslint ./src/renderer/src --ext .js,.vue",
        "make": "electron-builder --win portable"
    },
    "dependencies": {
        "electron-store": "^8.1.0",
        "vue": "^3.4.38"
    },
    "devDependencies": {
        "@vitejs/plugin-vue": "^5.0.4",
        "@eslint/js": "^9.8.0",
        "electron": "^31.3.0",
        "electron-builder": "^24.9.1",
        "electron-vite": "^2.3.0",
        "eslint": "^9.8.0",
        "eslint-plugin-vue": "^9.27.0",
        "vite": "^5.4.0",
        "vue-eslint-parser": "^9.4.2"
    },
    "build": {
        "appId": "com.whyself.articlemanager",
        "productName": "Blog Article Manager",
        "asar": false,
        "directories": {
            "output": "release"
        },
        "files": [
            "dist/**/*",
            "dist-electron/**/*",
            "node_modules/**/*",
            "package.json"
        ],
        "win": {
            "target": [
                {
                    "target": "nsis",
                    "arch": [
                        "x64"
                    ]
                },
                {
                    "target": "portable",
                    "arch": [
                        "x64"
                    ]
                }
            ],
            "signAndEditExecutable": false
        },
        "nsis": {
            "oneClick": false,
            "perMachine": false,
            "allowToChangeInstallationDirectory": true
        }
    }
}